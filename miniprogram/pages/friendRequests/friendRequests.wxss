.container {
    min-height: 100vh;
    background: #f5f5f5;
  }
  
  .loading, .empty {
    text-align: center;
    padding: 100rpx;
    color: #999;
    font-size: 28rpx;
  }
  
  .request-list {
    background: #fff;
  }
  
  .request-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
  }
  
  .info {
    flex: 1;
    margin-left: 24rpx;
  }
  
  .name {
    font-size: 32rpx;
    color: #333;
    display: block;
  }
  
  .desc {
    font-size: 26rpx;
    color: #999;
    margin-top: 8rpx;
    display: block;
  }
  
  .actions {
    display: flex;
    gap: 20rpx;
  }
  
  .btn {
    padding: 12rpx 30rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
  }
  
  .btn.reject {
    background: #f5f5f5;
    color: #666;
  }
  
  .btn.accept {
    background: #07C160;
    color: #fff;
  }