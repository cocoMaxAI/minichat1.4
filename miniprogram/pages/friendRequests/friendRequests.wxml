<view class="container">
  <view wx:if="{{loading}}" class="loading">加载中...</view>
  
  <view wx:elif="{{requests.length === 0}}" class="empty">
    <text>暂无好友请求</text>
  </view>
  
  <view wx:else class="request-list">
    <view class="request-item" wx:for="{{requests}}" wx:key="_id">
      <image 
        class="avatar" 
        src="{{item.requesterInfo.avatarUrl || '/images/default-avatar.png'}}" 
        mode="aspectFill"
      />
      <view class="info">
        <text class="name">{{item.requesterInfo.nickName || '未知用户'}}</text>
        <text class="desc">请求添加你为好友</text>
      </view>
      <view class="actions">
        <view 
          class="btn reject" 
          bindtap="handleRequest"
          data-request="{{item}}"
          data-action="reject"
        >拒绝</view>
        <view 
          class="btn accept"
          bindtap="handleRequest"
          data-request="{{item}}"
          data-action="accept"
        >接受</view>
      </view>
    </view>
  </view>
</view>