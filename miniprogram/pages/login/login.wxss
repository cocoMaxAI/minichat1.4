.login-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background-color: #fff;
    padding: 60rpx;
  }
  
  .logo-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 80rpx;
  }
  
  /* 头像选择按钮 */
  .avatar-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
    line-height: normal;
  }
  
  .avatar-wrapper::after {
    border: none;
  }
  
  .avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    background-color: #e5e5e5;
  }
  
  .avatar-tip {
    font-size: 24rpx;
    color: #999;
    margin-top: 16rpx;
  }
  
  /* 昵称输入框 */
  .nickname-input {
    width: 400rpx;
    height: 80rpx;
    margin-top: 40rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    text-align: center;
    border-bottom: 2rpx solid #07C160;
  }
  
  .app-name {
    font-size: 40rpx;
    font-weight: 600;
    color: #07C160;
    margin-top: 30rpx;
  }
  
  .login-area {
    width: 100%;
  }
  
  .login-btn {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
    border-radius: 12rpx;
    background-color: #07C160;
  }
  
  .agreement {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40rpx;
    font-size: 26rpx;
    color: #999;
  }
  
  .link {
    color: #576B95;
  }