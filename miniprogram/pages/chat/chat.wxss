
.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: #ededed;
    overflow: hidden;
  }
  
  /* 消息列表 */
  .message-list {
    flex: 1;
    min-height: 0; /* 重要：允许flex子项收缩到小于内容高度 */
    background: #ededed;
  }
  
  .load-more-tip {
    text-align: center;
    padding: 20rpx;
    color: #999;
    font-size: 24rpx;
  }
  
  /* 消息项 */
  /* .message-item {
    display: flex;
    margin-bottom: 30rpx;
    align-items: flex-start;
  } */
  .message-item {
    display: flex;
    padding: 20rpx 30rpx;
    align-items: flex-start;
  }
  
  .message-self {
    flex-direction: row-reverse;
  }
  
  .message-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
    flex-shrink: 0;
    background-color: #E5E5E5;
  }
  
  .message-content {
    max-width: 60%;
    margin: 0 20rpx;
    display: flex;
    flex-direction: column;
  }
  
  .message-self .message-content {
    align-items: flex-end;
  }
  
  .message-other .message-content {
    align-items: flex-start;
  }
  
  .sender-name {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 8rpx;
  }
  
  /* 消息气泡 */
  .message-bubble {
    padding: 20rpx 24rpx;
    border-radius: 8rpx;
    position: relative;
    word-break: break-all;
  }
  
  .message-self .message-bubble {
    background-color: #95EC69;
  }
  
  .message-other .message-bubble {
    background-color: #fff;
  }
  
  /* 气泡箭头 */
  .message-self .message-bubble::after {
    content: '';
    position: absolute;
    right: -16rpx;
    top: 24rpx;
    border: 10rpx solid transparent;
    border-left-color: #95EC69;
  }
  
  .message-other .message-bubble::after {
    content: '';
    position: absolute;
    left: -16rpx;
    top: 24rpx;
    border: 10rpx solid transparent;
    border-right-color: #fff;
  }
  
  .message-text {
    font-size: 30rpx;
    line-height: 1.5;
    color: #333;
  }
  
  /* 图片消息 */
  .message-image-wrap {
    border-radius: 8rpx;
    overflow: hidden;
  }
  
  .message-image {
    max-width: 400rpx;
    min-width: 150rpx;
    border-radius: 8rpx;
  }
  
  /* 消息状态 */
  .message-status {
    margin-top: 8rpx;
    font-size: 22rpx;
  }
  
  .status-sending {
    color: #999;
  }
  
  .status-failed {
    color: #F56C6C;
  }
  
  /* ========== 已撤回消息样式 ========== */
  .recalled-message {
    width: 100%;
    text-align: center;
    padding: 16rpx 0;
  }
  
  .recalled-message text {
    font-size: 24rpx;
    color: #999;
    background-color: rgba(0, 0, 0, 0.05);
    padding: 8rpx 20rpx;
    border-radius: 8rpx;
  }
  
  /* ========== 消息操作菜单样式 ========== */
  .message-menu-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
  }
  
  .message-menu {
    position: fixed;
    background-color: #4C4C4C;
    border-radius: 12rpx;
    padding: 10rpx 0;
    display: flex;
    flex-direction: row;
    transform: translate(-50%, -120%);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  }
  
  .message-menu::after {
    content: '';
    position: absolute;
    bottom: -16rpx;
    left: 50%;
    transform: translateX(-50%);
    border: 10rpx solid transparent;
    border-top-color: #4C4C4C;
  }
  
  .menu-item {
    padding: 16rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1rpx solid #666;
  }
  
  .menu-item:last-child {
    border-right: none;
  }
  
  .menu-item:active {
    background-color: #666;
  }
  
  .menu-item text {
    font-size: 28rpx;
    color: #fff;
    white-space: nowrap;
  }
  
  /* 底部占位 */
  .bottom-placeholder {
    height: 20rpx;
  }
  
  /* 输入区域 */
  .input-area {
    display: flex;
    align-items: flex-end;
    padding: 16rpx 20rpx;
    background-color: #F7F7F7;
    border-top: 1rpx solid #E5E5E5;
  }
  
  .input-btn {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .input-btn image {
    width: 50rpx;
    height: 50rpx;
  }
  
  .input-wrap {
    flex: 1;
    margin: 0 16rpx;
    background-color: #fff;
    border-radius: 8rpx;
    min-height: 72rpx;
    display: flex;
    align-items: center;
  }
  
  .text-input {
    flex: 1;
    padding: 16rpx 20rpx;
    font-size: 30rpx;
    min-height: 40rpx;
  }
  
  .voice-btn {
    flex: 1;
    margin: 0 16rpx;
    height: 72rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #333;
  }
  
  .voice-btn:active {
    background-color: #C9C9C9;
  }
  
  .send-btn {
    padding: 12rpx 24rpx;
    background-color: #07C160;
    color: #fff;
    border-radius: 8rpx;
    font-size: 28rpx;
    flex-shrink: 0;
  }

  /* 安全区域间距 */
  .safe-area-inset {
    padding-bottom: constant(safe-area-inset-bottom); 
    padding-bottom: env(safe-area-inset-bottom); /* iOS 11.2+ */
    min-height: 1rpx; /* 最小间距，确保非全面屏也有间距 */
    background: #f7f7f7;
  }
  
  /* 键盘占位 - 这是关键！放在flex容器最后用于推动上方内容 */
  .keyboard-holder {
    flex-shrink: 0;
    background: #f7f7f7;
    transition: height 0.1s ease-out;
  }
  
