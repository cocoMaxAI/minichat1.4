.container {
    min-height: 100vh;
    padding: 30rpx;
    background: #f5f5f5;
    box-sizing: border-box;
  }
  
  /* 头像区域 */
  .profile-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 30rpx;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
  }
  
  .avatar-btn {
    position: relative;
    width: 180rpx;
    height: 180rpx;
    padding: 0;
    margin: 0;
    background: transparent;
    border: none;
    line-height: normal;
  }
  
  .avatar-btn::after {
    display: none;
  }
  
  .profile-avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    background: #f0f0f0;
  }
  
  .avatar-edit-icon {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 50rpx;
    height: 50rpx;
    background: #07C160;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4rpx solid #fff;
  }
  
  .icon-text {
    font-size: 24rpx;
  }
  
  .avatar-tip {
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #999;
  }
  
  .upload-status {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #07C160;
  }
  
  /* 表单区域 */
  .profile-form {
    background: #fff;
    border-radius: 16rpx;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
  }
  
  .form-item {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .form-item:last-child {
    border-bottom: none;
  }
  
  .form-label {
    width: 140rpx;
    font-size: 30rpx;
    color: #333;
    flex-shrink: 0;
  }
  
  .form-input {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    text-align: right;
  }
  
  .form-value {
    flex: 1;
    font-size: 28rpx;
    color: #999;
    text-align: right;
    word-break: break-all;
  }
  
  .user-id {
    font-size: 24rpx;
    font-family: monospace;
  }
  
  /* 头像警告 */
  .avatar-warning {
    background: #fff3cd;
    border: 1rpx solid #ffc107;
    border-radius: 12rpx;
    padding: 20rpx 24rpx;
    margin-bottom: 30rpx;
  }
  
  .warning-text {
    font-size: 24rpx;
    color: #856404;
    line-height: 1.5;
  }
  
  /* 保存按钮 */
  .save-btn {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background: linear-gradient(135deg, #07C160, #06ad56);
    color: #fff;
    font-size: 34rpx;
    font-weight: 500;
    border-radius: 48rpx;
    border: none;
  }
  
  .save-btn.disabled {
    background: #ccc;
    color: #fff;
  }
  
  .save-btn::after {
    display: none;
  }