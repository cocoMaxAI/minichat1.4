/* 全局样式 */
page {
  background-color: #EDEDED;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  color: #333;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 头像样式 */
.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: #ccc;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}